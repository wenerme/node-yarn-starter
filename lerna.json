{
  "packages": ["packages/*"],
  "version": "1.0.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "npmClient": "npm",
      "ignoreChanges": [
        "**/__fixtures__/**",
        "**/__tests__/**",
        "**/stories/**",
        "**/*.md",
        "**/*.stories.tsx",
        "**/*.test.ts",
        "**/*.test.tsx"
      ]
    }
  }
}
