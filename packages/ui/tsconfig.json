{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "target": "es2017",
    "noEmitOnError": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "outDir": "lib",
    "baseUrl": "src"
  },
  "include": ["src"]
}
